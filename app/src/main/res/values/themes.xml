<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.H5170043_MuhammedCagatayMercan" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorSecondary">@color/secondaryColor</item>
        <item name="android:windowBackground">@color/primaryColor</item>
        <item name="android:statusBarColor" tools:targetApi="l">@color/primaryColor</item>
        <item name="android:textColor">@color/black</item>
        <item name="fontFamily">@font/open_sans_semi_bold</item>
        <item name="android:textSize">16sp</item>
        <item name="materialThemeOverlay">@style/ButtonStyleTextColor</item>
        <item name="shapeAppearanceOverlay">@style/ButtonCornerStyle</item>
    </style>

    <style name="ButtonStyleTextColor">
        <!-- colorPrimary provides the default background color of the component -->
        <!-- colorOnPrimary is the text color-->
        <item name="colorPrimary">@color/buttonColor</item>
        <item name="colorOnPrimary">@color/black</item>
    </style>
    
    <style name="ButtonCornerStyle" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>
    
    <style name="text_title" parent="TextAppearance.AppCompat.Large">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="fontFamily">@font/open_sans_extra_bold</item>
    </style>

    <style name="text_mini" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="fontFamily">@font/open_sans_semi_bold</item>
    </style>

</resources>